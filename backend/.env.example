# Fixify.AI Backend Environment Variables
# Copy this file to .env and fill in your actual values

# Twilio Configuration (for WhatsApp integration)
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here

# Google AI Configuration (for vision API)
GEMINI_API_KEY=your_gemini_api_key_here

# Google Maps API (for technician location/ETA)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration (if using external DB)
# DATABASE_URL=your_database_url_here

# Firebase Configuration (alternative to serviceAccountKey.json)
# Extract these values from your serviceAccountKey.json file
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour_private_key_here\n-----END PRIVATE KEY-----"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=your_client_id
FIREBASE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
FIREBASE_TOKEN_URI=https://oauth2.googleapis.com/token

# Security
# JWT_SECRET=your_jwt_secret_here
# BCRYPT_ROUNDS=10

# Email Configuration (if adding email notifications)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=your_email@gmail.com
# EMAIL_PASS=your_email_password

# WhatsApp Configuration
# WHATSAPP_PHONE_NUMBER=+14155238886
# WHATSAPP_WEBHOOK_URL=https://your-domain.com/api/twilio/webhook

# Development/Debug Settings
# DEBUG=true
# LOG_LEVEL=info
